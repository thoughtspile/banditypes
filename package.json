{
  "name": "banditypes",
  "version": "0.2.5",
  "description": "The might 400-byte schema validator",
  "author": "Vladimir Klepov v.klepov@gmail.com",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "module": "./dist/index.js",
  "main": "./dist/cjs/index.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "imports": {
    "#lib": "./dist/banditypes.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!dist/**/*.tsbuildinfo",
    "!dist/src"
    "!dist/tests"
  ],
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "scripts": {
    "test:types": "tsc && tsc -p tests --noEmit",
    "test:runtime": "vite build && uvu tests '.test.js$'",
    "test": "npm run test:types && npm run test:runtime",
    "test:coverage": "c8 --100 --exclude tests npm test",
    "lint": "prettier --check --log-level warn .",
    "lint:fix": "prettier --loglevel silent --write .",
    "size": "node bench/run",
    "build": "vite build && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoughtspile/banditypes.git"
  },
  "keywords": [
    "typescript",
    "superstruct",
    "schema",
    "validation",
    "zod"
  ],
  "bugs": {
    "url": "https://github.com/thoughtspile/banditypes/issues"
  },
  "homepage": "https://github.com/thoughtspile/banditypes#readme",
  "devDependencies": {
    "@types/node": "^18.14.1",
    "c8": "^10.1.3",
    "esbuild": "^0.25.8",
    "expect-type": "^1.1.0",
    "nano-staged": "^0.8.0",
    "prettier": "^3.4.2",
    "simple-git-hooks": "^2.11.1",
    "superstruct": "^2.0.2",
    "terser": "^5.37.0",
    "typescript": "^5.7.2",
    "uvu": "^0.5.6",
    "vite": "^6.3.5",
    "zod": "^3.24.1"
  },
  "nano-staged": {
    "*": "prettier --loglevel silent --write"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  }
}
